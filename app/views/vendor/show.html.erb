<head>
  <title><%= @page_name = 'Detailed Vendor Page'%></title>
</head>

<main>
<table class='vendor-table'>
  <tr>
    <th>Name</th>
    <th>ID</th>
    <th># of Employees</th>
    <th>Market</th>
  </tr>
  <tr>
    <td><%= @vendor.name %></td>
    <td><%= @vendor.id %></td>
    <td><%= @vendor.num_employees %></td>
    <td><%= Market.find(@vendor.market_id).name %></td>
  </tr>
</table>

<p><%= link_to "Back to all vendors", vendor_index_path %></p>
<p><%= link_to "Add a new sale", new_vendor_sale_path(@vendor.id) %></p>
<p><%= link_to "View all products", vendor_product_index_path(params[:id]) %></p>
<p><%= link_to "View all sales", vendor_sale_index_path(params[:id]) %></p>

<br>
<%= button_to "Delete this vendor", {:action => 'destroy', :id => @vendor.id }, :method => :delete, data: { confirm: "Really, now?" } %>
</main>
