<h1>Please enter or update your product</h1>

<% if @product.errors.any? %>
  <ul class="errors">
    <% @product.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for [@vendor, @product] do |f| %>
  <%= f.label "Product name" %>
  <%= f.text_field :name %>
  <%= f.submit %>
<% end %>
