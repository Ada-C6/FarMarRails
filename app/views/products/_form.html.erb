<main>
  <% if @product.errors.any? %>
    <ul class="errors">
      <% @product.errors.each do |column, message| %>
        <li>
          <strong>
            <%= column.capitalize %>
          </strong> <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <%= form_for @product, url: local_path_variable do |f| %>
    <p>
      <%= f.label :name %>:
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.submit "Submit" %>
    </p>
  <% end %>
</main>
