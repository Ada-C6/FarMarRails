<h2>Edit product:<%= "#{@product.name}" %></h2>

<% if @product.errors.any? %>
  <ul class="errors">
    <% @product.errors.each do |column, message| %>
      <li>
        <strong>
          <%= column.capitalize %>
        </strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @product, url: vendor_product_path, method: :patch do |f| %>
<p>
  <%= f.label :name %>:
  <%= f.text_field :name %>
</p>
<p>
  <%= f.submit "Submit" %>
</p>




<% end %>



<p>
  This is the product view: new.html.erb
</p>
