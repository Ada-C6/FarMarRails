<h1><%= "#{current_user.name}" %> </h1>
<h2><%= "Let's create a new vendor for your market." %></h2>

<section>
<%= form_for @market_vendor, url:  { action: 'create' },  html: { class: "vendor_create" } do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label "number of Employees" %>
  <%= f.number_field :num_employees %>

  <%= f.hidden_field :market_id, :value => current_user.id %>

  <%= f.submit %>
<% end %>
</section>
