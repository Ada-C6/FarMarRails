<%= render partial: "vendor_header" , locals: { action_name: "get"}%>

<h2>VENDORS:</h2>
<section class="visitor_list">
  <% @vendors.each do |vendor| %>
  <article>
    <p>
      <%= link_to "#{vendor.name}", show_vendor_path(vendor.market_id) %>
      <%= link_to( 'Edit', edit_vendor_path(vendor.id) ) %>
      <%= button_to 'delete', {action: "destroy", id: vendor.id }, method: :delete, data: {confirm: "Are you sure?"} %>
    </p>
    <% end %>
  </article>
</section>
