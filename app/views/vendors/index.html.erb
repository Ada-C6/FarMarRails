<%= link_to "Create a new vendor", new_vendor_path %>

<h1>all of the vendors</h1>

<ul>
  <% @vendors.each do |v| %>
    <p>
      <li>
        <%= "#{ v.name.capitalize } " %>

      <%= link_to "Details", vendor_path(v) %>
      <%= link_to "Edit", edit_vendor_path(v) %>
      <%= link_to "Delete", vendor_path(v), method: :delete, data: { confirm: "Are you sure you want to delete the vendor?" } %></li>
    </p>
    <% end %>
</ul>
