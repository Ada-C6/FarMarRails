<%= link_to "Create a new vendor", new_vendor_path %>

<table style="width:100%">

  <tr>
    <th>
      All Vendors
    </th>
    <th>
      Update
    </th>
  </tr>


  <% @vendors.each do |v| %>

  <tr><td><%= "#{ v.name.capitalize } " %>

    <%= link_to "Details", vendor_path(v) %></td>
    <td><%= link_to "Edit", edit_vendor_path(v) %>
    <%= link_to "Delete", vendor_path(v), method: :delete, data: { confirm: "Are you sure you want to delete the vendor?" } %>
  </td></tr>

  <% end %>

</table>
