<h1>My Vendor Account</h1>
<article>
  <h2> <%= @myvendor.name %></h2>
    <h3> My Total Sales<h3>
      <p>$<%= @total / 100.00 %></p>
      <h2>My Sales</h2>
      <% @sales.each do |sale| %>
      <ul>
      <li>$<%= sale.amount / 100.00 %>&nbsp;&nbsp;<%= sale.product.name %></li>
      </ul>
    <% end %>

    <h3> My Sales By Month</h3>
    
     
      <%= form_for @myvendor,  method: "get", url: show_sales_by_month_path do |f| %>
        <%= select_year(2013) %>
        <%= select_month(Time.now) %>
        <%= f.submit %>
      <% end %>

      <h2>My Products</h2>
      <% @myproducts.each do |product| %>
      <ul>
        <li><%= product.name %></li><li><p><%= button_to('Edit Product', products_edit_path, method: :get) %></li>
      <li><%= button_to('Delete', products_delete_path, method: :delete) %></li></ul>
      <% end %>
    </article>
    <section>
      <p><%= button_to('Add Product', products_new_path, method: :get) %></p>
    </section>
