<h1><%= @vendor.name %></h1>

<h2>Vendor Details</h2>
  <ul>
    <li>Vendor ID: <%= @vendor.id.to_s %></li>
    <li>Number of Employees: <%= @vendor.number_of_employees.to_s %></li>
    <li>Market: <%= @vendor_market %></li>
  </ul>

<h2>Vendor Products</h2>
  <%= link_to "Add Product", new_vendor_product_path(params[:id]) %>
  <ul>
    <% @products.each do |product| %>
      <li>
        <%= product.name %>
      </li>
    <% end %>
  </ul>

<h2>Vendor Sales</h2>

<% if @sales.empty? %>
  <p>
    <%= @vendor.name %> has no sales to date.
  </p>
<% else %>
  <table>
    <thead>
      <tr>
        <% @attribute_keys.each do |a| %>
        <th><%= a.to_s %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @sales.each do |sale| %>
      <tr>
        <% sale.attributes.each do |k, v| %>
        <td>
          <%= v %>
        </td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
<h3>TOTAL SALES</h3>
  <p>
    <%= "ALL SALES: $#{@sales_total}" %>
  </p>
  <p>
    <%= "SALES THIS MONTH:" %>
  </p>
