<h1>Vendor: <%= @vendor.name %></h1>

<p>
  Reference ID: <%= @vendor.ref_id %>
</p>

<p>
  Number of employees: <%= @vendor.num_employees %>
</p>

<p>
  Market ID: <%= @vendor.market_id %>
</p>

<p><%= link_to "Edit vendor", edit_vendor_path(@vendor)%></p>

<p><%= link_to "Return to full vendor list", vendors_path %></p>

<h3>Products: </h3>
<% @products.each do |product| %>
<ul>
  <li><%= "#{ product.name }" %> <%#= link_to "Edit", edit_vendor_product_path(product) %>
</li>
</ul>
<% end %>

<%= link_to "Create a new product", new_vendor_product_path(@vendor.ref_id) %>


