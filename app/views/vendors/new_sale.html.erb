<section>
    <h1>Add a New Sale</h1>
    <%= form_for @sale, url: create_sale_path do |f| %>
      <ul>
        <li>
          <%= f.hidden_field :product_id, :value => @product_id %>
          <%= f.hidden_field :vendor_id, :value => @vendor_id %>
          <%= f.label "Sale Amount:" %>
          <%= f.text_field :amount, :class => "amount" %>
        </li>
      </ul>
      <%= f.submit 'Submit'%>
    <% end %>
</section>
