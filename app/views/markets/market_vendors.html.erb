<h1>List of Vendors associated with <%= @market.name %>, Market ID: <%= @market.ref_id %></h1>

<p>
  <%= link_to "Return to Markets Overview", markets_path %>
</p>

<p>
  <%= link_to "Return to #{@market.name}", market_path %>
</p>

<table>
  <tr>
    <td>Name</td>
    <td>Number of Employees</td>
    <td>Update</td>
  </tr>
<% @vendors.each do |vendor| %>
<tr>
  <td><%= vendor.name %></td>
  <td><%= vendor.num_employees %></td>
  <td><%= link_to "Edit", edit_vendor_path(vendor) %>
  || <%= link_to "Delete", vendor_path(vendor), method: :delete, data: { confirm: "Are you sure you want to delete the vendor?" } %></td>
</tr>
<% end %>
</table
