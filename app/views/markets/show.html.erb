<p>Name: <%= @market.name %></p>
<p>County: <%= @market.county %></p>
<p>Address: <%= @market.address %>, <%= @market.city %>, <%= @market.state %>, <%= @market.zip %></p>


<p><%= link_to("Edit this market", edit_market_path, method: :get) %></p>
<p><%= link_to("Create a new vendor", new_market_vendor_path(params[:id]), method: :get) %></p>

<p>Vendors:</p>
<ul>
  <% @vendors.each do |vendor| %>
  <li class="link">
  <%= vendor.name %>
  <%= link_to("View vendor details", market_vendor_path(@market, vendor), method: :get) %> <%# REVIEW: add in the path and method %>
  <%= link_to("Edit this vendor", edit_market_vendor_path(@market, vendor), method: :get) %> <%# REVIEW: add in path an method %>
  <%= link_to("Delete this vendor", market_vendor_path(@market, vendor), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }) %></li>
  <% end %>
</ul>
