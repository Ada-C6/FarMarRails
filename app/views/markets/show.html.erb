<header>
  <nav>

    <h1><%= link_to "FarMar / ", root_path, :class => "page-link" %></h1>
    <h2 class="markets-header"><%= @market.name %></h2>
  </nav>
</header>

<div class="market-address">

<table>
  <tr>
    <th>Address</th>
    <th>City</th>
    <th>County</th>
    <th>State</th>
    <th>Zip</th>
  </tr>
  <tr>
    <td><%= @market.address %></td>
    <td><%= @market.city %></td>
    <td><%= @market.county %></td>
    <td><%= @market.state %></td>
    <td><%= @market.zip %></td>
  </tr>
  <tr>
  </tr>
</table>

  <%= link_to "Edit Market", edit_market_path(@market), :class => "page-link edit-markets" do %>

  <i class="fa fa-pencil fa-fw fa-lg" aria-hidden="true"></i>
  <% end %>

</div>


<h3>List of Vendors</h3>

<%= link_to "Add New Vendor", new_market_vendor_path(@market), class: "primary-btn" %>

<ul class="contained-list">

<% @vendors.each do |vendor| %>
  <li class="list-item">
 <%= vendor.name %>
  </li>
  <ul>

    <li><%= link_to "Edit Vendor",
        edit_market_vendor_path(vendor.market, vendor) %></li>

    <li><%= link_to "Delete Vendor",
        market_vendor_path(vendor.market, vendor),
        data: {confirm: "Are you sure you want to delete this vendor?"},
        method: :delete %></li>
  </ul>
<% end %>
</ul>
