
<section class ="market-info">
  <ul>
    <li><%= @market.name %></li>
    <% if @link == "market" %>
    <span id = "edit"><li><%= link_to "Edit Market", edit_market_path %></li></span>
    <% end %>

    <li>
      <%= @market.address %>,
      <%= @market.city %>,
      <%= @market.state %>,
      <%= @market.zip %>
    </li>
  </ul>
</section>

<article class="market-vendors">

 <h3>List of Vendors</h3>
  <ul>
    <% if @link == "market" %>
  <li><%= link_to "create a Vendor", new_market_vendor_path(@market.id) %></li> 
    <% end %>

    <% @vendors.each do |vendor| %>
      <li>
        <%= vendor.name %>
        <% if @link == "market" %>
        <%= link_to "Edit", edit_market_vendor_path(vendor.market, vendor)  %>
        <%= link_to "Delete", market_vendor_path(@market, vendor),  method: :delete, data: {confirm: "Are you sure?"} %>
        <% end %>
        <% if vendor != nil %>
        <% else %>
        <%= @msg %>
        <% end %>
      </li>
    <% end %>
  </ul>
</article>
