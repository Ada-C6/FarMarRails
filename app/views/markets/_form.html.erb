<section class="stand-alone-form market">
  <%= form_for @market do |f| %>
    <ul>
      <li>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </li>
      <li>
        <%= f.label :address %>
        <%= f.text_field :address %>
      </li>
      <li>
        <%= f.label :city %>
        <%= f.text_field :city %>
      </li>
      <li>
        <%= f.label :county %>
        <%= f.text_field :county%>
      </li>
      <li>
        <%= f.label :state %>
        <%= f.text_field :state %>
      </li>
      <li>
        <%= f.label :zip %>
        <%= f.text_field :zip %>
      </li>
    </ul>

    <%= f.submit class:"search-button" %>
  <% end %>
</section>
