<% if @user == "market" %>
  <h3>Add a new market: </h3>
  <%= button_to "New Market", new_markets_path, method: :get, class: 'btn' %>
<% end %>

<section>

<% if @user == "market" %>
    <h3>Active markets: </h3>
    <% @markets.each do |market| %>
      <p>
        <%= link_to(market.name, show_markets_path(market.id, @user))%>
        <%= "| #{market.city}, #{market.state}" %>
      </p>
      <%= button_to "Edit", edit_markets_path(id: market.id), method: :get, class: 'btn' %>
      <%= button_to "Remove", delete_markets_path(id: market.id), method: :delete, class: 'btn', data: { confirm: "Are you sure you want to delete this Vendor from your Market?" } %>
    <% end %>

<% elsif @user == "guest"  %>
    <h3>Active markets: </h3>
    <% @markets.each do |market| %>
      <p>
        <%= link_to(market.name, show_markets_path(market.id, @user))%>
        <%= "| #{market.city}, #{market.state}" %>
      </p>
    <% end %>

<% elsif @user == "vendor"  %>

  <h2>Active Vendors: </h2>
  <% @vendors.each do |vendor| %>
    <p>
      <%= link_to(vendor.name, index_vendors_path(vendor.id))%>
    </p>
  <% end %>
<% end %>



</section>

<%= params %>
