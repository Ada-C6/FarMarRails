<header>
  <nav>
    <h1>
      <%= link_to "FarMar", root_path, class: "page-link" %>
      <%= link_to "Vendors", vendors_path, class: "page-link" %>
      <%= link_to "#{@vendor.name} Products", vendor_products_path(@vendor.id), class: "page-link" %>
    </h1>
    <h2 class="user-header">Add a Sale</h2>
  </nav>
</header>

<div class='form-header'>
  <h1><%= "Add a New Sale: #{@product.name}" %></h1>
</div>

<% if @sale.errors.any? %>
  <ul class="errors">
    <% @sale.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>


<%= form_for @sale, url: vendor_product_sales_path, html: {class: 'form'}, method: :post do |f| %>
  <%= f.label :amount, "Amount: $" %>
  <%= f.text_field :amount %>

  <%= f.submit :class => 'create_button'%>

<% end %>
