<h1>Add a New Sale</h1>
<% if @sale.errors.any? %>
  <ul class="errors">
    <% @sale.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>


<%= form_for @sale, url: vendor_product_sales_path, html: {class: 'form'}, method: :post do |f| %>
  <%= f.label :amount, "Amount: $" %>
  <%= f.text_field :amount %>

  <%= f.submit :class => 'create_button'%>

<% end %>

<%= link_to "No Sale Made, take me back to products", vendor_products_path %>
