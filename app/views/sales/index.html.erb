<h2>Sales for <%= @vendor.name %></h2>
<table>
  <tr>
    <td> Product </td>
    <td> Amount </td>
    <td> Sale Time </td>
  </tr>
  <% @sales.each do |sale| %>
  <tr>
    <td><%= product_name(sale) %></td>
    <td><%= sprintf("$%0.02f", sale.amount/100.to_f) %></td>
    <td><%= sale.purchase_time %></td>
  </tr>
  <% end %>
</table>
