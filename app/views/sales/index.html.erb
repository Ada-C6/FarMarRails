<h2>All Sales for <%= @vendor.name %></h2>
<table>
  <tr>
    <td> Product </td>
    <td> Amount </td>
    <td> Sale Time </td>
  </tr>
  <% @sales.each do |sale| %>
  <tr>
    <td><%= product_name(sale) %></td>
    <td><%= sprintf("$%0.02f", sale.amount/100.to_f) %></td>
    <td><%= sale.purchase_time %></td>
  </tr>
  <% end %>
</table>

<h3> Total Sales: <%= sprintf("$%0.02f",total_sales(@sales)/100.to_f) %></h3>

