<h1><%= "#{@vendor.name}'s Sales:" %></h1>
<%= link_to "Current Month Sales", vendor_current_sales_path %>
<p><%= "Total Sales Amount: $#{ @total_sales_amount }" %></p>
<ol>
  <% @all_sales_by_vendor.each do | sale | %><li>
    <p>
      <%= "Product: #{sale.product.name}"%>
      <ul>
        <li><strong><%= "Sale Amount:" %></strong> <%= "$#{sale.amount/100}" %></li>
        <li><strong><%= "Purchase Time:" %></strong> <%= "#{sale.purchase_time}" %></li>
      </ul>

    </p>
  <% end %></li>
</ol>

<%= link_to "Back to all Vendors", vendors_path %>
